<h1>Log in</h1>
<div class="container">
  <%= form_with(local: true) do |f| %>  
    <div class="form-group">
      <%= f.label :email, "Email :" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password, "Password :" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <%= f.submit "Log in", class: "btn btn-primary" %>
  <% end %>
</div>